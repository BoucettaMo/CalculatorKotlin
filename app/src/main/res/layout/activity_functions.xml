<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FunctionsActivity">

    <TextView
        android:background="@color/grey"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/green"
        android:textSize="20sp" />

    <TextView
        android:background="@color/grey"
        android:textColor="@color/green"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/rightleft"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="→"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/degree"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="Degree"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/squareroot"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="⍻"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/sinus"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="sin"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/cosin"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="cos"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/tangent"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="tan"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/ln"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="ln"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/log"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="log"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="1/x"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/exp"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="exp(x)"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/square"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="x^2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/exponent"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="x^y"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/abs"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="|x|"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/pi"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="Pi"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/euler"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="e"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>


        </TableLayout>


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20sp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="C"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/bracket"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="()"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="%"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/division"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="/"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/nine"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="x"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/four"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="—"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="+"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/plusMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/coma"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="wrap_content"
                    android:layout_height="60sp"
                    android:backgroundTint="@color/grey"
                    android:text="="
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:textSize="20sp"
                    app:cornerRadius="60sp" />


            </TableRow>


        </TableLayout>
    </LinearLayout>
</LinearLayout>